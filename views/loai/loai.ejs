<%- include('../inc/top_inc') %>
    <h1>Quản lý loại</h1>
    <div class="list">

        <button type="button" class="btn btn-lg btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            <a href="/loai/add">Add category</a>
          </button>
  
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Tên Loại</th>

                </tr>
            </thead>
            <% listTL.forEach( (row)=> { %>
                <tr>
                    <td>
                        <a href="/loai/edit/<%= row._id %>">
                            <%= row._id %>
                        </a>
                    </td>
                    <td>
                        <a>
                            <%= row.name %>
                        </a>
                    </td>
                    <td><a role="button"  href="loai/delete/<%= row._id %>" button type="button" class="btn btn-danger">Xóa</button></td>
                </tr>
                
                <% }); %>
        </table>
    </div>
    <%- include('../inc/bottom_inc') %>