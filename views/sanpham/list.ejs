<%- include('../inc/top_inc') %>

<h1>Trang chủ</h1>
<button type="button" class="btn btn-lg btn-primary" data-bs-toggle="modal"
data-bs-target="#staticBackdrop" >
<a href="/add">Add product</a>
</button>
<div id="list">


</div>


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Giá</th>
            <th scope="col">Loại</th>
        </tr>
        <!-- <th scope="col">Ảnh đại diện</th> -->
    </thead>

    <% listSP.forEach((row)=>{ %>
        <tr>
            <td>
                <a href="/edit/<%= row._id %>">
                    <%= row._id %>
                </a>
            </td>
            <td>
                <a>
                    <%= row.name %>
                </a>
            </td>
            <td>
                <a>
                    <%= row.price %>
                </a>
            </td>
            <td>
                <a>
                    <%= row.description %>
                </a>
            </td>
            <td>

            <td> <a href="">
                    <% if( typeof(row.id_category) !='undefined' ) { %>
                        <%= row.id_category.name %>
                            <% } %>
                </a>
            </td>
            <td><a role="button"  href="/delete/<%= row._id %>" button type="button" class="btn btn-danger">Xóa</button></td>
        </tr>
        <% }); %>


</table>
<%- include('../inc/bottom_inc') %> 