      <div class="modal-content">
          
          <div class="modal-body">
              <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Name product</label>
                  <input type="text" class="form-control mb-3" value="<%= objSP.name %>" name="name">
              </div>
